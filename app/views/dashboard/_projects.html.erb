<%- if @projects.empty? -%>
  
  <h4 align="center">You haven't created any projects yet! Choose a repository to get started...</h4>
  
<% else %>

  <table class="zebra-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <%= render @projects %>
    </tbody>
  </table>
  
<%- end -%>