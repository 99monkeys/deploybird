<div class="row">
  <div class="span3 right">
    
    <h6>Description</h6>
    <h6>Repository</h6>
    <%- if resource.organization? -%><h6>Organization</h6><%- end -%>
    
  </div>
  <div class="span13">
    
    <h5><%= resource.description %></h5>
    <h5><%= link_to resource.html_url, resource.html_url %></h5>
    <%- if resource.organization? -%>
      <h5><%= link_to resource.organization.login, "https://github.com/#{resource.organization.login}" %></h5>
    <%- end -%>
    
  </div>
</div>

<hr />

<div class="row">
  <div class="span3 right">
    <p class="quiet">Repo updated:</p>
    <p class="quiet">Created:</p>
    <p class="quiet">Updated:</p>
  </div>
  <div class="span13">
    <p><%= time_ago_in_words resource.pulled_at %> ago</p>
    <p><%= resource.created_at.to_s :long_ordinal %></p>
    <p><%= resource.updated_at.to_s :long_ordinal %></p>
  </div>
</div>