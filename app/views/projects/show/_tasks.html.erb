<div class="tab-pane" id="tasks">

  <div class="right">
    <%- if params[:all_tasks] -%>
      <%= link_to 'hide hidden tasks', resource_path(:tab => "tasks"), :class => "btn small" %>
    <%- else -%>
      <%= link_to 'show hidden tasks', resource_path(:tab => "tasks", :all_tasks => true), :class => "btn small" %>
    <%- end -%>
  </div>
  
  <hr />

  <%- resource.tasks(params[:all_tasks]).each do |task| -%>
    <div class="row margin-top">
      <div class="span2 margin-top">
        <%= link_to 'Run this...', new_project_jobs_path(resource, task.fully_qualified_name), :class => "btn primary" %>
      </div>
      <div class="span14 bordered-bottom padding-bottom2">
        <div class="row">
          <div class="span11">
            <h3><%= task.fully_qualified_name %> <small class="padding-left"><%= task.brief_description %></small></h3>
          </div>
          <div class="span3 right margin-top2">
            <%= link_to raw("show full description >"), '#', :class => "show-task-description label" %>
          </div>
        </div>
        <div class="row">
          <div class="span14 quiet">
            <%- if last_run = resource.jobs.where(:task => task.fully_qualified_name).first -%>
              last run <%= link_to "#{time_ago_in_words(last_run.created_at)} ago", [resource, last_run] %>
              <span class="small padding-left">(<%= last_run.created_at.to_s :short %>)</span>
            <%- end -%>
          </div>
        </div>
        <div class="row hide">
          <div class="span14">
            <pre><%= task.description %></pre>
          </div>
        </div>
      </div>
    </div>
  <%- end -%>

</div>